#! /bin/sh

# helm.bin is the original helm binary
case $1 in
  show*)
    set -x
    exec /usr/local/bin/helm.bin $@
    set +x
    ;;
  *)
    set -x
    exec /usr/local/bin/helm.bin secrets $@
    set +x
    if [ -f "secrets.yaml" ]
    then
      set -x
      sops -e -i secrets.yaml
      set +x
    fi
    ;;
esac
